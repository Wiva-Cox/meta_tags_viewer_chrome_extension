{
  "name": "Meta Tags Viewer",
  "description": "Displays title and description meta tag of the current webpage. It is a great tool for QA Engineers from Aleksandr Mironov",
  "version": "1.0 (MVP)",
  "manifest_version": 3,
  "icons": {
    "128": "/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
